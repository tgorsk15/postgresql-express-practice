<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <form action="/search" method="POST">
        <label for="queryName">Name: </label>
        <input type="text" name="queryName" id="queryName" required>
        
        <button type="submit">Search</button>
    </form>
    <a href="/">Back to home</a>

    <br>
    <% if (locals.results)  {%>
        <% results.forEach(result => { %>
            <h3> Name: <%= result.username %> </h3>
        <% }); %>
    <% } %>
  </body>
</html>